VK_VERSION=${VK_VERSION:-0.2.0}
pushd /usr/local/bin
wget https://github.com/leynos/vk/releases/download/v${VK_VERSION}/vk
chmod 777 vk
popd

uv tool install mbake

# Tools to help developers
apt update -y
apt-get install -y \
  strace gdb ripgrep nano difftastic \
  ltrace valgrind bpfcc-tools bpftrace \
  lsof htop iotop \
  ncdu tree bat delta \
  tcpdump nmap clang lldb \
  eza fzf hyperfine shellcheck \
  linux-tools-common linux-tools-generic

mkdir -p ~/git
pushd ~/git
FD_VER=10.2.0
wget https://github.com/sharkdp/fd/releases/download/v10.2.0/fd-v${FD_VER}-x86_64-unknown-linux-musl.tar.gz
tar xzvf fd-v${FD_VER}-x86_64-unknown-linux-musl.tar.gz fd-v${FD_VER}-x86_64-unknown-linux-musl/fd
mv fd-v${FD_VER}-x86_64-unknown-linux-musl/fd /usr/local/bin
rmdir fd-v${FD_VER}-x86_64-unknown-linux-musl/
popd

pushd /usr/local/bin
CHECKMAKE_VERSION=${CHECKMAKE_VERSION:-0.2.2}
wget -O checkmake https://github.com/checkmake/checkmake/releases/download/${CHECKMAKE_VERSION}/checkmake-${CHECKMAKE_VERSION}.linux.amd64
chmod 755 checkmake

SRGN_VERSION=${SRGN_VERSION:-0.14.0}
wget -o srgn https://github.com/alexpovel/srgn/releases/download/srgn-v${SRGN_VERSION}/srgn-x86_64-unknown-linux-gnu.tgz
chmod 755 srgn
popd

